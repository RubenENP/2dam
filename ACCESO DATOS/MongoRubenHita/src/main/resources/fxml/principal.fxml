<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="root" prefHeight="1050.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.screen.principal.PrincipalController">
   <top>
       <MenuBar fx:id="menu" BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="Options">
<!--               <MenuItem mnemonicParsing="false" onAction="#backToLogin" text="Go back to login"/>-->
               <MenuItem mnemonicParsing="false" onAction="#backToWelcome" text="Welcome pane" />
               <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
           </Menu>
           <Menu mnemonicParsing="false" text="NewsPapers">
               <MenuItem mnemonicParsing="false" onAction="#showNewspapers" text="Show all Newspapers" />
            <MenuItem mnemonicParsing="false" onAction="#deleteNewspaper" text="Delete Newspaper" />
           </Menu>
           <Menu mnemonicParsing="false" text="Articles">
               <MenuItem mnemonicParsing="false" onAction="#showArticles" text="Show Articles" />
            <MenuItem mnemonicParsing="false" onAction="#deleteArticles" text="delete articles" />
           </Menu>
         <Menu mnemonicParsing="false" text="Readers">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#addReader" text="Add reader" />
               <MenuItem mnemonicParsing="false" onAction="#updateReader" text="Update Reader" />
               <MenuItem mnemonicParsing="false" onAction="#deleteReader" text="Delete Reader" />
               <MenuItem mnemonicParsing="false" onAction="#showReaders" text="Show Reader" />
            </items>
         </Menu>
         <Menu mnemonicParsing="false" text="ReadArticles">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#addReadArticle" text="Add ReadArticle" />
            </items>
         </Menu>
       </MenuBar>
   </top>
</BorderPane>
